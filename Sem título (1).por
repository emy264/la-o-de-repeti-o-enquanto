programa {
  funcao inicio() {

    inteiro numero, quantidade=0

    escreva("Digite um número: ")
    leia(numero)

    enquanto (numero > 0){

      escreva("Digite um novo número: ")
      leia(numero)
      quantidade = quantidade + 1
      
      escreva("A quantidade de números digitados é: ", quantidade)
    




    }
    
  }
}
